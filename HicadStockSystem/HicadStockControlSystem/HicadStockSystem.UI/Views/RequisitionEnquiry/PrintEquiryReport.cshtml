@model  HicadStockSystem.Core.Utilities.ReportVM
@using Microsoft.AspNetCore.Http;
@{
	ViewBag.Title = "PrintEquiryReport";
}
@{
	Layout = null;
	

}
<!DOCTYPE html>
<html>
<body>
	 <h1 style="text-align:center" class="text-center display-4">@Model.StkSystems.CompanyName</h1>
	 <h3 style="text-align:center">@Model.StkSystems.CompanyAddress</h3>
	 <br />
	 <h3>Requisition Enquiry Report: Produce On @DateTime.Now</h3>
	 <br />
	 <div>
		 <h4>Requisition No.: @Model.RequisitionEnquiry.RequisitionNo</h4>  
		 <h4>Requisition By.: @Model.RequisitionEnquiry.RequestedBy</h4> 
		 <h4>Requisition Date: @Model.RequisitionEnquiry.RequestDate</h4>
		 <h4>Approved By: @Model.RequisitionEnquiry.AprrovedBy</h4>
		 <h4>Approved Date: @Model.RequisitionEnquiry.ApprovedDate</h4>
		 <h4>Supplied By: @Model.RequisitionEnquiry.SuppliedBy</h4>
		 <h4>Supplied Date: @Model.RequisitionEnquiry.SupplyDate</h4>
	 </div>
	 <table border="2" cellpadding="2" cellspacing="0" width="100%">
		  <tr style="text-align:center">
			   <th>Item Code</th>
			   <th>Item Description</th>
			   <th>Approved Quantity</th>
			   <th>Supplied Quantity</th>
			   <th>Price</th>
			   <th>Value</th>
		  </tr>
			@foreach (var a in Model.RequisitionEnquiry.Items)
			{
			  <tr style="text-align:center">
			   <td> @a.ItemCode </td>
			   <td> @a.ItemDesc </td>
			   <td> @a.ApprovedQty</td>
			   <td> @a.Quantity</td>
			   <td> @Math.Round((decimal)(a.Price),2)</td>
			   <td> @Math.Round((decimal)(a.Value),2)</td>
			  </tr>
			}
			<tr>	
				<td><span><b>Total</b></span></td><td></td><td></td><td></td>
				<td></td>
				<td style="text-align:center"><span><b>@Math.Round((decimal)Model.RequisitionEnquiry.Items.ToList().Sum(x=>x.Value),2)</b></span></td>
			</tr>
	 </table>

	@*<h6 style="text-align:center">RETRICTED</h6>*@
</body>
</html>
