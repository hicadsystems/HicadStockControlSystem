@model  HicadStockSystem.Core.Utilities.ReportVM
@using Microsoft.AspNetCore.Http;
@{
	ViewBag.Title = "StockRequisition";
}
@{
	Layout = null;
	

}
<!DOCTYPE html>
<html>
<body>
	 <h1 style="text-align:center" class="text-center display-4">@Model.StkSystems.CompanyName</h1>
	 <h3 style="text-align:center">@Model.StkSystems.CompanyAddress</h3>
	 <br />
	 <h3 style="text-align:center" >Stock Requisition</h3>
	  <div>
		 <h4>Requisition No: @Model.Requesition.RequisitionNo</h4>
		 <h4>Requisition Date: @Model.Requesition.DateAndTime</h4>  
		 <h4>Requisition By.: @Model.Requesition.RequisitionBy</h4> 
		 <h4>Department: @Model.Requesition</h4>
	 </div>
	 <br />
	 <table border="2" cellpadding="1" cellspacing="0" width="100%">
		  <tr style="text-align:center">
			   <th>Item Code</th>
			   <th>Item Description</th>
			   <th>Quantity</th>
		  </tr>
			@foreach (var a in Model.Requesition.ItemLists)
			{
			  <tr style="text-align:center">
			   <td> @a.ItemCode </td>
			   <td> @a.ItemDescription </td>
			   <td> @a.Quantity</td>
			  </tr>
			}
	 </table>
</body>
</html>
