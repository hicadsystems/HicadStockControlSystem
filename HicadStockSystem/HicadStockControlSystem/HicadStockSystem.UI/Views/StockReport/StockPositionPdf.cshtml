@model  HicadStockSystem.Core.Utilities.StockPositionReportVM
@using Microsoft.AspNetCore.Http;
@{
	ViewBag.Title = "StockPositionPdf";
}
@{
	Layout = null;

}
<!DOCTYPE html>
<html>
<body>
	 <h1 style="text-align:center" class="text-center display-4">@Model.StkSystems.CompanyName</h1>
	 <h3 style="text-align:center">@Model.StkSystems.CompanyAddress</h3>

	 <br />
	@*<h3 style="text-align:center">REPORTS</h3>
		<h4 style="text-align:center">Stock Position</h4>*@

	 <h3>Stock Position Report: Produce On @DateTime.Now</h3>
	 <table border="2" cellpadding="2" cellspacing="0" width="100%">
		  <tr style="text-align:center">
			   <th>Item Code</th>
			   <th>Item Desc</th>
			   <th>PartNo</th>
			   <th>Current Quantity</th>
			   <th>Price</th>
			   <th>Value</th>
		  </tr>
			@foreach (var a in Model.StockPosition)
			{
			  <tr style="text-align:center">
			   <td> @a.ItemCode </td>
			   <td> @a.ItemDesc </td>
			   <td> @a.PartNo</td>
			   <td> @a.CurrentBalance</td>
			   <td> @Math.Round((decimal)(a.Price),2) </td>
			   <td> @Math.Round((decimal)(a.Value),2) </td>
			  </tr>
			}

		  <tr>

			   <td><span><b>Total</b></span></td>
			   <td></td>
			   <td></td>
			   <td></td>
			   <td></td>
			   <td style="text-align:center"><span><b>@Math.Round((decimal)Model.StockPosition.ToList().Sum(x=>x.Value),2)</b></span></td>
		  </tr>

	 </table>

	@*<h6 style="text-align:center">RETRICTED</h6>*@
</body>
</html>
