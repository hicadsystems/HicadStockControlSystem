@model  HicadStockSystem.Core.Utilities.ReportVM
@using Microsoft.AspNetCore.Http;
@{
	ViewBag.Title = "PrintReport";
}
@{
	Layout = null;

}
<!DOCTYPE html>
<html>
<body>
	 <h1 style="text-align:center" class="text-center display-4">@Model.StkSystems.CompanyName</h1>
	 <h3 style="text-align:center">@Model.StkSystems.CompanyAddress</h3>

	 <br />
	@*<h3 style="text-align:center">REPORTS</h3>
		<h4 style="text-align:center">Stock Position</h4>*@

	 <h3>Slow Moving Items Report: Produce On @DateTime.Now</h3>
	 <table border="2" cellpadding="2" cellspacing="0" width="100%">
		  <tr style="text-align:center">
			   <th>Item Code</th>
			   <th>Item Desc</th>
			   <th>Reorder Level</th>
			   <th>Last Issue Date</th>
			   <th>Last Issue Quantity</th>
			   <th>Current Value</th>
		  </tr>
			@foreach (var a in Model.SlowMovingItems)
			{
			  <tr style="text-align:center">
			   <td> @a.ItemCode </td>
			   <td> @a.ItemDesc </td>
			   <td> @a.ReorderLevel</td>
			   <td> @a.LastIssueDate</td>
			   <td> @a.LastIssueQty</td>
			   <td> @a.CurrentQty</td>
			  </tr>
			}

	 </table>

	@*<h6 style="text-align:center">RETRICTED</h6>*@
</body>
</html>
